<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madibasoft.envisadroid"
    android:installLocation="auto"
    android:versionCode="33"
    android:versionName="1.4.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
    permissions to allow send/receive of settings via gmail 
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    -->
    <application
        android:name=".application.EnvisadroidApplication"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.madibasoft.envisadroid.EnvisadroidActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.madibasoft.envisadroid.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.madibasoft.envisadroid.EnvisadroidActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madibasoft.envisadroid.EnvisadroidActivity" />
        </activity>
        <activity
            android:name="com.madibasoft.envisadroid.log.LogActivity"
            android:label="@string/title_activity_log"
            android:parentActivityName="com.madibasoft.envisadroid.EnvisadroidActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madibasoft.envisadroid.EnvisadroidActivity" />
        </activity>
        <activity
            android:name="com.madibasoft.envisadroid.ZoneEditActivity"
            android:label="@string/title_activity_zone_edit"
            android:parentActivityName="com.madibasoft.envisadroid.EnvisadroidActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madibasoft.envisadroid.EnvisadroidActivity" />
        </activity>
        <activity
            android:name="com.madibasoft.envisadroid.ToolsActivity"
            android:label="@string/title_activity_tools"
            android:parentActivityName="com.madibasoft.envisadroid.EnvisadroidActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madibasoft.envisadroid.EnvisadroidActivity" />
        </activity>
        <activity
            android:name="com.madibasoft.envisadroid.sync.SyncActivity"
            android:label="@string/title_activity_sync"
            android:parentActivityName="com.madibasoft.envisadroid.EnvisadroidActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madibasoft.envisadroid.EnvisadroidActivity" />
        </activity>
        <activity
            android:name="com.madibasoft.envisadroid.keypad.KeypadActivity"
            android:label="@string/title_activity_keypad"
            android:parentActivityName="com.madibasoft.envisadroid.EnvisadroidActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madibasoft.envisadroid.EnvisadroidActivity" />
        </activity>
    </application>

</manifest>