<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|center_horizontal" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/syncButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/navigation_refresh"
            android:text="@string/sync" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/action_settings"
            android:text="@string/settings" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/timeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/device_access_time"
            android:text="@string/time" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/logButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/collections_view_as_list"
            android:text="@string/log" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|center_horizontal" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/chimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/device_access_volume_on"
            android:text="@string/chime_toggle" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/action_help"
            android:text="@string/help" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/timersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/action_timers"
            android:text="@string/timers" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/reportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/action_report"
            android:text="@string/report" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|center_horizontal" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/armToolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/device_access_secure"
            android:text="@string/arm" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/stayToolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/ic_action_stay"
            android:text="@string/armStay" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/disarmToolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/device_access_not_secure"
            android:text="@string/disarm" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/rebootButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/action_reboot"
            android:text="@string/reboot" />
    </LinearLayout>

</LinearLayout>