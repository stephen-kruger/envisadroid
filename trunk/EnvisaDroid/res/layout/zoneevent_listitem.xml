<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_text"
    android:orientation="vertical"
    android:paddingEnd="3dip"
    android:paddingStart="3dip" >

    <TextView
        android:id="@+id/zoneevent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zones"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gradient_start"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zoneevent_partitionText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textColor="@color/gradient_center" />

        <TextView
            android:id="@+id/zoneevent_zonepartition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dip"
            android:paddingStart="4dip"
            android:text="@string/zoneevent_dummy_number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#343434"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:text="@string/zoneevent_zoneText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textColor="@color/gradient_center" />

        <TextView
            android:id="@+id/zoneevent_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dip"
            android:paddingEnd="4dip"
            android:text="@string/zoneevent_dummy_number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textColor="#343434" />
        
        <TextView
            android:id="@+id/zoneevent_eventdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dip"
            android:paddingEnd="4dip"
            android:text="@string/zoneevent_dummy_timestamp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"
            android:gravity="end"
            android:textColor="#343434" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:contentDescription="@string/zones"
            android:src="@drawable/ic_action_time" />

        <TextView
            android:id="@+id/zoneevent_zonedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="1dip"
            android:paddingEnd="1dip"
            android:text="@string/zoneevent_dummy_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"
            android:textColor="#343434" />

        
    </LinearLayout>

</LinearLayout>