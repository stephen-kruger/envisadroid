<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_thumbnail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zones"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#040404"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zones"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gradient_center"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/group_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/action_button" />

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:contentDescription="@string/zones"
        android:src="@drawable/device_access_secure" />

</LinearLayout>