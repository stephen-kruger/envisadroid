<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_thumbnail"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:paddingEnd="2dip"
    android:paddingLeft="3dip"
    android:paddingRight="2dip"
    android:paddingStart="3dip" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingEnd="0dp"
        android:paddingLeft="3dip"
        android:paddingRight="0dip"
        android:paddingStart="3dip" >

        <TextView
            android:id="@+id/group_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/zones"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#040404"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/zones"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gradient_center"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/group_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/action_button" />

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:contentDescription="@string/zones"
        android:src="@drawable/ic_action_locked" />

</LinearLayout>